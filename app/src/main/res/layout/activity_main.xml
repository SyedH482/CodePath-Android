<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question_textview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Who is the 44th President of the United States"
        android:textAlignment="center"
        android:textSize="40sp"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flashcard_answer_textview_One"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/answer_background"
        android:elevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flashcard_question_textview"
    />
    <TextView
        android:id="@+id/flashcard_answer_textview_Two"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Joe Byron"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/answer_background"
        android:elevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flashcard_answer_textview_One"
        />
    <TextView
        android:id="@+id/flashcard_answer_textview_Three"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Abraham Lincoln"
        android:textSize="40sp"
        android:gravity="center"
        android:background="@drawable/answer_background"
        android:elevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flashcard_answer_textview_Two"
        />
</androidx.constraintlayout.widget.ConstraintLayout>